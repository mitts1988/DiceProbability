        android:layout_width="match_parent">
        <TableRow android:gravity="center"
            android:background="#000000">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textStyle="bold"
                android:textSize="28dp"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow>
            <TableLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_weight=".5">
                <TableRow android:layout_margin="5dp">
                    <EditText android:id="@+id/D4Count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <!--<TextView android:id="@+id/D4"-->
                    <!--android:layout_width="36dp"-->
                    <!--android:layout_height="36dp"-->
                    <!--android:textSize="20dp"-->
                    <!--android:layout_gravity="center" />-->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/D4"
                        android:layout_column="8"
                        android:src="@drawable/d4" />
                    <TableLayout>
                        <TableRow>
                            <Button android:id="@+id/D4Plus"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="+" />
                        </TableRow>
                        <TableRow>
                            <Button android:id="@+id/D4Minus"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="-" />
                        </TableRow>
                    </TableLayout>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight=".5">
                <TableRow
                    android:gravity="center">
                    <EditText android:id="@+id/CheckNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="5dp"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:textSize="24dp"
                        android:textStyle="bold"/>
                    <TextView android:id="@+id/Check"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="@string/check"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                    <TableLayout>
                        <TableRow>
                            <Button android:id="@+id/CheckPlus"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="+" />
                        </TableRow>
                        <TableRow>
                            <Button android:id="@+id/CheckMinus"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="-" />
                        </TableRow>
                    </TableLayout>
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow>
            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight=".5"
                android:layout_gravity="left">
                <TableRow android:layout_margin="5dp">
