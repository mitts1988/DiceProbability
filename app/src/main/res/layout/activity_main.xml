                                android:text="+" />
                        </TableRow>
                        <TableRow>
                            <Button android:id="@+id/ModifierMinus"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:text="-" />
                        </TableRow>
                    </TableLayout>
                </TableRow>
            </TableLayout>
        </TableRow>
        <TableRow>
            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
